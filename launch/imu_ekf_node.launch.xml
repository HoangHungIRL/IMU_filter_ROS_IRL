<?xml version="1.0"?>
<launch>
    <!-- Launch the EKF IMU node -->
    <node pkg="imu_filter_ros_irl" exec="imu_ekf_node" name="imu_ekf_node" output="screen">
        <!-- Load parameter file -->
        <param from="$(find-pkg-share imu_filter_ros_irl)/config/params_ekf.yaml"/>
    </node>

    <node pkg="imu_filter_ros_irl" exec="euler_plotter.py" name="euler_plotter" output="screen">
    <!-- <param name="use_sim_time" value="true"/>
    <param name="history_length" value="100"/> -->
  </node>
</launch>